{
  "name": "wait",
  "ns": "utils",
  "async": true,
  "description": "Holds the input for a while",
  "phrases": {
    "active": "Holding input for {{input.timeout}} milliseconds."
  },
  "expose": [
    "setTimeout"
  ],
  "ports": {
    "input": {
      "in": {
        "type": "any",
        "title": "Input",
        "description": "Input to be delayed",
        "async": true
      },
      "timeout": {
        "type": "number",
        "title": "Timeout",
        "description": "Timeout in milliseconds",
        "format": "time"
      }
    },
    "output": {
      "out": {
        "type": "any",
        "title": "Output",
        "description": "Outputs the delayed input"
      }
    }
  }
}
