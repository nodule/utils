{
  "name":"exec",
  "ns":"utils",
  "description":"Execute a program",
  "phrases": {
    "active": "Executing {{input.in}}"
  },
  "require": {
    "child_process": "builtin"
  },
  "ports":{
    "input":{
      "in":{
        "type":"string",
        "title":"Program String",
        "description":"e.g. `cat *.js bad_file | wc -l`"
      },
      "encoding":{
        "type":"string",
        "title":"Encoding",
        "default":"utf-8"
      },
      "timeout":{
        "type":"number",
        "title":"Encoding",
        "default": 0
      },
      "maxBuffer":{
        "type":"number",
        "title":"Buffer Maximum",
        "default": 204800 
      },
      "killSignal":{
        "type":"string",
        "title":"Kill Signal",
        "default": "SIGTERM" 
      },
      "cwd":{
        "type":"string",
        "title":"Current working dir",
        "default": null 
      },
      "env":{
        "type":"string",
        "title":"Env",
        "default": null 
      }
    },
    "output":{
      "stdout":{
        "title": "Output",
        "type":"string"
      },
      "stderr":{
        "title": "Output",
        "type":"string"
      },
      "error":{
        "title": "Error",
        "type":"object"
      }
    }
  }
}
