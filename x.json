      "ports": {
        "input": {
          "in": {
            "type": "any",
            "title": "Input",
            "async": true
          },
          "from": {
            "enum": [
              "ascii",
              "utf8",
              "ucs2",
              "base64",
              "binary",
              "hex"
            ],
            "type": "string",
            "title": "From",
            "default": "utf8"
          },
          "to": {
            "enum": [
              "ascii",
              "utf8",
              "ucs2",
              "base64",
              "binary",
              "hex"
            ],
