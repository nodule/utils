          "child_process": "builtin"
        }
      },
      "ports": {
        "input": {
          "in": {
            "type": "string",
            "title": "Program String",
            "description": "e.g. `cat *.js bad_file | wc -l`"
          },
          "data": {
            "type": "string",
            "title": "Data For StdIn",
            "description": "Optional data to be send to stdin, the process executed must be set to expect stdin",
            "default": null
          },
          "encoding": {
            "type": "string",
            "title": "Encoding",
            "default": "utf-8"
          },
          "timeout": {
            "type": "number",
            "title": "Encoding",
            "default": 0
          },
          "maxBuffer": {
