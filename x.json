    {
      "ports": {
        "input": {
          "in": {
            "type": "any",
            "title": "Input",
            "async": true,
            "description": "Input to be repeated (if any)",
            "default": null
          },
          "interval": {
            "type": "number",
            "title": "Interval",
            "description": "Interval in milliseconds",
            "format": "time",
            "required": true
          },
          "stop": {
            "type": "any",
