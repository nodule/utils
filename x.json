            "type": "string",
            "title": "Kill Signal",
            "default": "SIGTERM"
          },
          "cwd": {
            "type": "string",
            "title": "Current working dir",
            "default": null
          },
          "env": {
            "type": "string",
            "title": "Env",
            "default": null
          }
        },
        "output": {
          "out": {
            "title": "Std Out",
            "type": "string"
          },
          "flushed": {
            "title": "Flushed",
            "type": "boolean"
          },
